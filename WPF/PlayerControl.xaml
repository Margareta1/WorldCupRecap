<UserControl x:Class="WPF.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30" Loaded="UserControl_Loaded">
    <Border x:Name="border" BorderBrush="#FFFFFFFF" BorderThickness="1" CornerRadius="100">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="lblPlayerNumber" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>
    </Border>
</UserControl>
